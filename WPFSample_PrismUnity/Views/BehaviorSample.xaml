<Window x:Class="WPFSample_PrismUnity.Views.BehaviorSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:WPFSample_PrismUnity.Common.Behavior"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel>
            <Button Content="BehaviorSample1" Width="100" Height="60">
                <i:Interaction.Behaviors>
                    <local:AlertBehavior Message="こんにちは世界"/>
                </i:Interaction.Behaviors>
            </Button>
        </StackPanel>
    </Grid>
</Window>
